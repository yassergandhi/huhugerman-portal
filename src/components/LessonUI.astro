---
const { lesson } = Astro.props;
---

<section class="container">
  <a href={`/${lesson.level}`} class="btn-outline">
    ‚Üê Volver al mapa
  </a>

  <h1>{lesson.title}</h1>

  <div class="card">
    <p>{lesson.instructions.intro}</p>

    <ul>
      {lesson.instructions.grammarReminder.map(item => (
        <li>{item}</li>
      ))}
    </ul>
  </div>

  {lesson.source?.type === 'youtube' && (
    <div class="card video">
      <iframe src={lesson.source.embedUrl} allowfullscreen />
    </div>
  )}

  <form id="activity-form" class="card">
    {lesson.activity.parts.map(part => (
      <div>
        <label>{part.label}</label>
        <textarea rows={part.rows} placeholder={part.placeholder} />
      </div>
    ))}

    <button type="submit">Enviar</button>
  </form>
</section>
