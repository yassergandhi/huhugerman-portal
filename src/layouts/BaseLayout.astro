---
/* src/layouts/BaseLayout.astro */
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | huhuGERMAN</title>
  </head>
  <body>
    <div class="container">
      <header class="site-header">
        <h1 class="site-title">huhuGERMAN</h1>
        <p class="site-subtitle">
          Tu espacio de trabajo para reforzar lo visto en clase y avanzar con autonomía.
        </p>
      </header>

      <main>
        <slot />
      </main>

      <footer class="site-footer">
        <p>
          &copy; {new Date().getFullYear()} — huhuGERMAN  
          <br />
          Material de apoyo para estudiantes de alemán (UAM / externos).
        </p>
        <p class="author-tag">
          Creado por <span class="author-name">Yasser Gandhi Hernández Esquivel</span>
        </p>
      </footer>
    </div>
  </body>
</html>