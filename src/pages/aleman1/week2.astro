<script type="module">
    import { supabase } from '../../lib/supabase';

    // 1. VALIDACI√ìN EN EL CLIENTE (Esto rompe el bucle infinito)
    const { data: { session } } = await supabase.auth.getSession();
    
    if (!session) {
      // Si no hay sesi√≥n en el navegador, redirigimos al inicio
      window.location.href = "/";
    } else {
      // Si hay sesi√≥n, mostramos el formulario y ocultamos el mensaje de carga
      document.getElementById('activity-form').style.display = 'block';
      document.getElementById('loading-auth').style.display = 'none';
    }

    const form = document.getElementById('activity-form');
    const btn = document.getElementById('submit-btn');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      btn.disabled = true;
      btn.innerText = "Analizando con IA...";

      const val1 = document.getElementById('part1').value;
      const val2 = document.getElementById('part2').value;
      const val3 = document.getElementById('part3').value;

      const text = `[PRESENTACI√ìN]\n${val1}\n\n[PERSONAJE]\n${val2}\n\n[REFLEXI√ìN]\n${val3}`;

      try {
        // Enviar a la API de IA
        const response = await fetch('/api/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ text })
        });
        const result = await response.json();
        
        if (!result.success) throw new Error(result.error);

        // Guardar en Supabase usando la sesi√≥n confirmada del cliente
        const { error: dbError } = await supabase.from('submissions').upsert({
          user_id: session.user.id,
          user_email: session.user.email,
          session_id: 'a1-w2', 
          content_text: text,
          ai_feedback: result.feedback
        }, { onConflict: 'user_id,session_id' });

        if (dbError) throw dbError;

        // Redirigir al dashboard con el feedback
        window.location.href = `/dashboard?new_feedback=${encodeURIComponent(result.feedback)}`;

      } catch (err) {
        console.error(err);
        alert("‚ö†Ô∏è Error: " + err.message);
        btn.disabled = false;
        btn.innerText = "Reintentar";
      }
    });
</script>
